<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primaryDark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name = "custom_tab_layout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name ="tabIndicatorColor">@color/theme_primaryDark</item>
        <item name ="android:textSize">16sp</item>
    </style>

</resources>
